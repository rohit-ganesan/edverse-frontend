# Firebase Configuration
# Get these values from your Firebase project settings
# https://console.firebase.google.com/project/YOUR_PROJECT/settings/general

REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id

# Optional: Firebase Analytics
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Development Settings
# Set to 'true' to use Firebase emulators instead of production Firebase
REACT_APP_USE_EMULATOR=false

# Emulator Ports (only used when REACT_APP_USE_EMULATOR=true)
REACT_APP_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
REACT_APP_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
REACT_APP_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# API Configuration
# Base URL for your backend API (if different from Firebase Functions)
REACT_APP_API_BASE_URL=http://localhost:5001/your-project/us-central1

# Feature Flags
# Enable/disable features during development
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_DEBUG_MODE=false

# Instructions:
# 1. Copy this file to `.env.local`
# 2. Replace all placeholder values with your actual Firebase configuration
# 3. Never commit `.env.local` to version control
# 4. Add any new environment variables to this example file for team reference
